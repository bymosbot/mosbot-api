# Server Configuration
PORT=3000
NODE_ENV=development

# Instance Timezone
# IANA timezone for all cron schedules and time displays (e.g. Asia/Singapore, America/New_York)
# Defaults to UTC if not set
TIMEZONE=Asia/Singapore

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mosbot
DB_USER=mosbot
DB_PASSWORD=changeme

# Test Database Configuration (optional)
# If TEST_DB_* variables are set, they will be used for integration tests
# Otherwise, tests will use the regular DB_* configuration
# TEST_DB_HOST=localhost
# TEST_DB_PORT=5432
# TEST_DB_NAME=mosbot_test
# TEST_DB_USER=mosbot
# TEST_DB_PASSWORD=changeme

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Archive Job Configuration
ENABLE_ARCHIVER=true
ARCHIVE_CRON=0 3 * * *
ARCHIVE_AFTER_DAYS=7
ARCHIVE_ON_STARTUP=false

# OpenClaw Workspace Integration
# Local dev: kubectl port-forward -n <namespace> svc/openclaw-workspace 8080:8080
# Production: http://openclaw-workspace.<namespace>.svc.cluster.local:8080
OPENCLAW_WORKSPACE_URL=http://localhost:8080
OPENCLAW_WORKSPACE_TOKEN=your-workspace-token-change-in-production

# OpenClaw Gateway Integration (for session tools)
# Local dev: kubectl port-forward -n <namespace> svc/openclaw 18789:18789
# Production: http://openclaw.<namespace>.svc.cluster.local:18789
OPENCLAW_GATEWAY_URL=http://localhost:18789
OPENCLAW_GATEWAY_TOKEN=your-gateway-token-change-in-production
# Optional: timeout in ms for gateway requests (default 15000)
# OPENCLAW_GATEWAY_TIMEOUT_MS=15000

# Subagent Data Retention Configuration
SUBAGENT_RETENTION_DAYS=30
ACTIVITY_LOG_RETENTION_DAYS=7
RETENTION_ARCHIVE_ENABLED=true
ENABLE_SUBAGENT_RETENTION_PURGE=true
SUBAGENT_RETENTION_CRON=0 3 * * *
SUBAGENT_RETENTION_ON_STARTUP=false
