{
  "name": "mosbot-api",
  "version": "0.1.2",
  "description": "MosBot task management API - self-hosted backend",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "node src/db/runMigrations.js",
    "db:reset": "node src/db/reset.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:run": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:check": "eslint src/ --max-warnings 0",
    "prepare": "husky"
  },
  "keywords": [
    "mosbot",
    "task-management",
    "api",
    "self-hosted"
  ],
  "author": "MosBot",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cron-parser": "^5.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  }
}
